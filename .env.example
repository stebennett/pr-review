# ==============================================================================
# PR-Review Environment Variables
# ==============================================================================
# Copy this file to .env and fill in your values

# ==============================================================================
# Web Backend (apps/web-be)
# ==============================================================================

# GitHub OAuth App credentials
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/callback

# JWT Configuration
# Generate secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption key for storing GitHub tokens
# Generate key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173

# Database URL
DATABASE_URL=sqlite:///./data/pr_review.db

# ==============================================================================
# Web Frontend (apps/web-fe)
# ==============================================================================

# Backend API URL
VITE_API_URL=http://localhost:8000

# ==============================================================================
# Scheduler (apps/scheduler)
# ==============================================================================

# SMTP2GO credentials for email notifications
# Sign up at: https://www.smtp2go.com/
SMTP2GO_HOST=mail.smtp2go.com
SMTP2GO_PORT=587
SMTP2GO_USERNAME=
SMTP2GO_PASSWORD=

# Email sender address
EMAIL_FROM_ADDRESS=noreply@example.com

# Application URL (for links in emails)
APPLICATION_URL=http://localhost:5173

# How often to poll for schedule changes (seconds)
SCHEDULE_POLL_INTERVAL=60
